                <h4 class="mb-0 {{ block.settings.heading_font_family }} {{ block.settings.heading_size }}">{{ 'templates.cart.subtotal' | t }}</h4>
            </div>
            <div class="col-6 text-end">
                <h4 class="mb-0 {{ block.settings.price_font_family }} {{ block.settings.price_size }}" data-cart-total>{{ cart.original_total_price | money }}</h4>
            </div>
        {%- endif -%}
    </div>    
</div>

