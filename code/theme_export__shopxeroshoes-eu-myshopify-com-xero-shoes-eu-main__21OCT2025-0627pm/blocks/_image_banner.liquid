
 {% liquid 
    assign block_index = 0
    assign preload = false

    for section_block in section.blocks
      assign block_index = block_index | plus: 1
      if block.id == section_block.id
        break
      endif
    endfor

    if block_index == 1 and section.index == 1
        assign preload = true
    endif
%}

    <div class="media-banner__wrapper {% if block.settings.first_image != blank and block.settings.second_image != blank %} media-banner--two-images d-flex{% endif %} {% if block.settings.stack_images_on_mobile %} media_banner--stacked {% endif %} {% if block.settings.hide_second_image %} hide_second_image--mobile {% endif %} {% if block.settings.overlay_on_mobile %} media_banner--mobile_overlay {% endif %}" {% if block.settings.enable_overlay %} style="--overlay-opacity: {{ block.settings.overlay_opacity }}; --overlay-color:{{ block.settings.overlay_bg_color }}; --mix-blend-mode: {{ block.settings.blend_mode}};" {% endif %}>
        {%- if block.settings.first_image != blank -%}
            {%- render 'picture-tag'
                image: block.settings.first_image
                mobile_image: block.settings.first_image_mobile | default: block.settings.first_image
                preload: preload
            -%}
        {%- endif -%} 

        {%- if block.settings.second_image != blank -%}
            {%- render 'picture-tag'
                image: block.settings.second_image
                mobile_image: block.settings.second_image_mobile | default: block.settings.second_image
            -%}
        {%- endif -%} 

        {%- if block.settings.first_image == blank and block.settings.second_image == blank -%}
            {% render 'placeholder-image' %}
        {%- endif -%}
    </div>
  
    <div class="container w-100 {{ block.settings.display }} {{ block.settings.align_items }} {{ block.settings.justify_content }} {{ block.settings.align_items_mb }} {{ block.settings.justify_content_mb }}">
        {% content_for 'blocks' %}
    </div>
  
  {% schema %}
    {
        "name": "Image Banner",
        "tag": null,
        "blocks": [{ "type": "@theme" }, { "type": "@app" }],
        "settings": [
            {
                "type": "image_picker",
                "id": "first_image",
                "label": "Desktop Image"
            },
            {
                "type": "image_picker",
                "id": "first_image_mobile",
                "label": "Mobile Image"
            },
            {
                "type": "image_picker",
                "id": "second_image",
                "label": "Desktop Image"
            },
            {
                "type": "image_picker",
                "id": "second_image_mobile",
                "label": "Mobile Image"
            },
            {
                "type": "checkbox",
                "id": "stack_images_on_mobile",
                "default": true,
                "label": "Stack images on mobile"
            },
            {
                "type": "checkbox",
                "id": "hide_second_image",
                "default": true,
                "label": "Second image hidden on mobile."
            },
            {
                "type": "header",
                "content": "Overlay"
            },
            {
                "type": "checkbox",
                "id": "enable_overlay",
                "label": "t:settings.overlay",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "overlay_on_mobile",
                "default": true,
                "label": "Mobile media overlay",
                "visible_if": "{{ block.settings.enable_overlay == true }}"
            },
            {
                "type": "color_background",
                "id": "overlay_bg_color",
                "label": "t:settings.overlay_color",
                "default": "#000000",
                "visible_if": "{{ block.settings.enable_overlay == true }}"
            },
            {
                "type": "range",
                "id": "overlay_opacity",
                "label": "t:settings.overlay_opacity",
                "min": 0.1,
                "max": 1,
                "step": 0.1,
                "default": 0.5,
                "visible_if": "{{ block.settings.enable_overlay == true }}"
            },
            {
                "type": "select",
                "id": "blend_mode",
                "label": "Mix Blend Mode",
                "visible_if": "{{ block.settings.enable_overlay == true }}",
                "options": [
                    {
                        "value": "multiply",
                        "label": "Multiply"
                    },
                    {
                        "value": "darken",
                        "label": "Darken"
                    },
                    {
                        "value": "lighten",
                        "label": "Lighten"
                    },
                    {
                        "value": "soft-light",
                        "label": "Soft Light"
                    },
                    {
                        "value": "none",
                        "label": "None"
                    }
                ],
                "default": "none"
            },
            {
                "type": "header",
                "content": "Layout"
            },
            {
                "type": "select",
                "id": "display",
                "label": "t:settings.display",
                "options": [
                    {
                        "value": "d-flex",
                        "label": "Flex"
                    },
                    {
                        "value": "d-block",
                        "label": "Block"
                    },
                    {
                        "value": "d-inline-block",
                        "label": "Inline Block"
                    }
                ],
                "default": "d-flex"
            },
            {
                "type": "select",
                "id": "direction",
                "label": "t:settings.direction",
                "visible_if": "{{ block.settings.display == 'd-flex' }}",
                "options": [
                    {
                        "value": "flex-md-row",
                        "label": "t:options.horizontal"
                    },
                    {
                        "value": "flex-md-column",
                        "label": "t:options.vertical"
                    }
                ],
                "default": "flex-md-column"
            },
            {
                "type": "select",
                "id": "direction_mobile",
                "label": "t:settings.direction_mobile",
                "visible_if": "{{ block.settings.display == 'd-flex' }}",
                "options": [
                    {
                        "value": "flex-row",
                        "label": "t:options.horizontal"
                    },
                    {
                        "value": "flex-column",
                        "label": "t:options.vertical"
                    }
                ],
                "default": "flex-column"
            },
            {
                "type": "select",
                "id": "wrap",
                "label": "t:settings.wrap",
                "visible_if": "{{ block.settings.display == 'd-flex' }}",
                "options": [
                    {
                        "value": "flex-wrap",
                        "label": "Yes"
                    },
                    {
                        "value": "flex-nowrap",
                        "label": "No"
                    }
                ],
