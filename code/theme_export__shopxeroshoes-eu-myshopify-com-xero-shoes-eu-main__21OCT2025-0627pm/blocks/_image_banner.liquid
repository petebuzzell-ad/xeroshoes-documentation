                    }
                ],
                "default": "justify-content-center"
            }
        ],
        "presets": [
            {
                "name": "Image Banner",
                "blocks": [
                    {
                        "type": "group",
                        "blocks": [
                            {
                                "type": "heading",
                                "settings": {
                                    "text": "<h1>Image Banner</h1>"
                                }
