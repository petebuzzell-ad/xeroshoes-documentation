{% capture class_list %}
    {{ block.settings.padding_top_desktop }} {{ block.settings.padding_bottom_desktop }} {{ block.settings.padding_left_desktop }} {{ block.settings.padding_right_desktop }} {{ block.settings.padding_top_mobile }} {{ block.settings.padding_bottom_mobile }} {{ block.settings.padding_left_mobile }} {{ block.settings.padding_right_mobile }}
{% endcapture %}


{%- if block.settings.image_upload != blank -%}
    <div class="placeholder-number-image-block__icon-wrapper {{ class_list }} {% if block.settings.animated_svg %}parallax-number-image{% endif %}">
        {{ block.settings.image_upload | image_url: width: 500 | image_tag: widths: '50, 100, 200, 300, 400, 500', class: 'placeholder-number-image-block__icon' }}
    </div>
{%- endif -%}
  
{% style %}
    #shopify-block-{{ block.id }} .placeholder-number-image-block__icon{
        width: {{ block.settings.width_mobile }}px;
        height: {{ block.settings.height_mobile }}px;
        {% if block.settings.border_corner > 0 %}border-radius: {{ block.settings.border_corner }}px; {% endif %}
        
    }

    @media (min-width: 992px) {
        #shopify-block-{{ block.id }} .placeholder-number-image-block__icon{
            width: {{ block.settings.width }}px;
            height: {{ block.settings.height }}px;
            {% if block.settings.icon_color_bg != blank %}background: {{ block.settings.icon_color_bg }}; {% endif %}
            {% if block.settings.border_width > 0 %} border:{{ black.settings.border_width }} solid {{ block.settings.border_color }}; {% endif %}
            /* transition: all 0.6s ease; */
        }
    }
    .parallax-number-image{
        position: relative;
        z-index: -1;
    }
    .placeholder-number-image-block {
        margin-left: 45px;
        margin-bottom: -73px;
    }
{% endstyle %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (window.innerWidth >= 992) {
            document.querySelectorAll(".parallax-number-image img").forEach((img) => {
                let anim01 = gsap.timeline().fromTo(img, {yPercent: 20}, {yPercent: -20}, 0);
                ScrollTrigger.matchMedia({
                    "(min-width: 992px)": function () {
                        ScrollTrigger.create({
                            trigger: img.parentElement,
                            animation: anim01,
                            start: "top 75%",
                            end: "bottom top+=10%",
                            scrub: 0.6
                        });
                    }
                });
            }); 
        }
    }); 
</script>
