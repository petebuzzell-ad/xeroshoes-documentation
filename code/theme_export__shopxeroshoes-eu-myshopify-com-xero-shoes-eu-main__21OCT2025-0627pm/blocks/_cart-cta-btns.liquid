{% capture class_list %}
    {{ block.settings.padding_top_desktop }} {{ block.settings.padding_bottom_desktop }} {{ block.settings.padding_left_desktop }} {{ block.settings.padding_right_desktop }} {{ block.settings.padding_top_mobile }} {{ block.settings.padding_bottom_mobile }} {{ block.settings.padding_left_mobile }} {{ block.settings.padding_right_mobile }}
{% endcapture %}

<div class="cart-cta-btns d-flex gap-2 flex-column {{ class_list }} {{ block.settings.border }}" {{ block.attributes }} style="border-color:{{ block.settings.border_color }}; background: {{ block.settings.bg_color }};">
    <div class="d-flex gap-2">
        <button type="submit" id="checkout" class="btn {{ block.settings.style_checkout_btn }} {{ block.settings.size_checkout_btn }} flex-fill px-1" name="checkout" form="cart-form-{{ section.id }}" > {{ 'templates.cart.checkout' | t }} </button>
        {% if block.settings.view_cart %}<a href="{{ routes.cart_url }}" class="btn {{ block.settings.style_class }} {{ block.settings.size_class }} flex-fill px-1">{{ 'templates.cart.View_Shopping_cart' | t }}</a>{% endif %}
    </div>
    {% if block.settings.additional_checkout_buttons %}
        {% if additional_checkout_buttons %}
            <span class="additional-checkout-buttons">
                <div id="additional-checkout-buttons">
                    {{ content_for_additional_checkout_buttons }}
                </div>
            </span>
        {% endif %}
    {% endif %}
</div>

