{% capture class_list %}
    {{ block.settings.padding_top_desktop }} {{ block.settings.padding_bottom_desktop }} {{ block.settings.padding_left_desktop }} {{ block.settings.padding_right_desktop }} {{ block.settings.padding_top_mobile }} {{ block.settings.padding_bottom_mobile }} {{ block.settings.padding_left_mobile }} {{ block.settings.padding_right_mobile }}
{% endcapture %}

{%  assign custom_class = block.settings.custom_class %}

{%- if block.settings.icon != 'none' and block.settings.image_upload == blank -%}
    <svg aria-hidden="true" focusable="false" style="color:{{ block.settings.icon_color }}" class="icon-block__icon {{ class_list }} {{ custom_class }}"><use href="#icon-{{ block.settings.icon }}"></use></svg> 
{%- elsif block.settings.image_upload != blank -%}
    {% comment %} {{ block.settings.image_upload | image_url: width: 500 | image_tag: widths: '50, 100, 200, 300, 400, 500', class: 'icon-block__icon' }} {% endcomment %}

    <img src="{{ block.settings.image_upload | image_url: width: 500 }}" 
    srcset="{{ block.settings.image_upload | image_url: width: 50 }} 50w, 
            {{ block.settings.image_upload | image_url: width: 100 }} 100w, 
            {{ block.settings.image_upload | image_url: width: 200 }} 200w, 
            {{ block.settings.image_upload | image_url: width: 300 }} 300w, 
            {{ block.settings.image_upload | image_url: width: 400 }} 400w, 
            {{ block.settings.image_upload | image_url: width: 500 }} 500w"
    sizes="(max-width: 991px) {{ block.settings.width_mobile }}px, {{ block.settings.width }}px"
    alt="{{ block.settings.image_upload.alt | default: 'Icon' }}"
    class="icon-block__icon {{ custom_class }} img-fluid"
    width="{{ block.settings.width }}"
    height="{{ block.settings.height }}">
{%- endif -%}
  
{% style %}
    #shopify-block-{{ block.id }} .icon-block__icon{
        width: {{ block.settings.width_mobile }}px;
        min-width: {{ block.settings.width_mobile }}px;
        height: {{ block.settings.height_mobile }}px;
        {% if block.settings.border_corner > 0 %}border-radius: {{ block.settings.border_corner }}px; {% endif %}
        
    }

    @media (min-width: 992px) {
        #shopify-block-{{ block.id }} .icon-block__icon{
            width: {{ block.settings.width }}px;
            min-width: {{ block.settings.width }}px;
            height: {{ block.settings.height }}px;
            {% if block.settings.icon_color_bg != blank %}background: {{ block.settings.icon_color_bg }}; {% endif %}
            {% if block.settings.border_width > 0 %} border:{{ block.settings.border_width }} solid {{ block.settings.border_color }}; {% endif %}
        }
    }
{% endstyle %}

