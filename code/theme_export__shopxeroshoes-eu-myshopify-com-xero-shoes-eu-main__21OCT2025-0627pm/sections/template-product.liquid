{% capture spacing_class_list %}
    {{ section.settings.section_top_spacing }} {{ section.settings.section_top_spacing_ipad }} {{ section.settings.section_top_spacing_mobile }} {{ section.settings.section_bottom_spacing }} {{ section.settings.section_bottom_spacing_ipad }} {{ section.settings.section_bottom_spacing_mobile }}
{% endcapture %}
<div data-section="{{ section.id }}" data-template="product" class="{% if product.has_only_default_variant %}only-default-variant{% endif %} {{ spacing_class_list }}">
    <section data-product-container 
        data-section="{{ section.id }}"
        data-product="{{ product.id }}"
        data-update-url="true"
        data-url="{{ product.url }}">
        <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %} ps-0 product-details-wrapper">
            <div class="row align-items-start">
                {% content_for "blocks", closest.product: product %}
            </div>
        </div>
    </section>
</div>

