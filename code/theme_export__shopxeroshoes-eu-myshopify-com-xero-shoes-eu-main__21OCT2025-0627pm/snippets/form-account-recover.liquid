<section data-recover-password-form style="display: none;">
    <div id="customerLoginForm">
        {% form 'recover_customer_password', return_to: '/account/login#recover' %}

        <h4 class="text-center">{{ 'customer.recover_password.title' | t }}</h4>
        

        {% if form.posted_successfully? %}
            <p class="success-msg">{{ 'customer.recover_password.success' | t }}</p>
        {%  else %}
            <p class="text-center">{{ 'customer.recover_password.subtext' | t }}</p>
        {% endif %}


        {% if form.errors %}
            {{ form.errors | default_errors }}
        {% endif %}


        <div class="form-group form-floating mt-5">
            <input type="email" value="" id="resetCustomerEmail" name="email" aria-label="email" class="form-control" placeholder="{{ 'customer.recover_password.email' | t }}" required>
            <label id="resetCustomerEmail">{{ 'customer.recover_password.email' | t }}</label>
        </div>

        <input type="submit" class="btn btn-primary w-100" value="{{ 'customer.recover_password.submit' | t }}">

        <div class="mt-3 text-center">
            <input type="reset" class="btn btn-dark btn-sm hide-resetform w-100" data-hideResetPass value="{{ 'customer.reset_password.cancel' | t }}">
        </div>
        {% endform %}
    </div>
</section>
 