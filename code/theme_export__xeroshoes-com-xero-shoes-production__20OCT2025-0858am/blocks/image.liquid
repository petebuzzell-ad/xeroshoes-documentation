<style rel="stylesheet" class="d-none">
    .image-block.custom-image-width-{{ block.settings.custom_image_width_value }} {
        width: {{ block.settings.custom_image_width_value }}px;
    }
</style>

{% capture class_list %}
    {{ block.settings.padding_top_desktop }} {{ block.settings.padding_bottom_desktop }} {{ block.settings.padding_left_desktop }} {{ block.settings.padding_right_desktop }} {{ block.settings.padding_top_mobile }} {{ block.settings.padding_bottom_mobile }} {{ block.settings.padding_left_mobile }} {{ block.settings.padding_right_mobile }}
{% endcapture %}


<div class="image-block flex-shrink-1 {% if block.settings.custom_image_width == true %}custom-image-width-{{ block.settings.custom_image_width_value }} {% else %} {{ block.settings.width }} {{ block.settings.width_md }} {{ block.settings.width_sm }} {% endif %} object-fit-{{ block.settings.object_fit }} position-relative {{ class_list }}" {{ block.shopify_attributes }} >
 
    {%- if block.settings.enable_link and block.settings.url != blank -%}
    <a href="{{ block.settings.url }}" class="d-block position-relative">
    {%- endif -%}
        {%- if block.settings.image -%}
            {% render 'image',
                image: block.settings.image,
                custom_class: block.settings.custom_class
                aspect_ratio: block.settings.aspect_ratio
                preload: block.settings.enable_preload
            %}
        {%- else -%}

        <div class="placeholder-image border-style size-style">
            <placeholder-image
              data-block-id="{{ block.id }}"
              data-type="general"
            ></placeholder-image>
          </div>
        {% render 'placeholder-image' aspect_ratio: block.settings.aspect_ratio %}
        {%- endif -%}
    {%- if block.settings.enable_link and block.settings.url != blank -%}
    </a>
    {%- endif -%}
    
    {% if block.settings.enable_overlay %}
        <div class="overlay" style="background: {{ block.settings.overlay_bg_color }}!important; opacity: {{ block.settings.overlay_opacity }}!important; mix-blend-mode: {{ block.settings.blend_mode }};"></div>
    {% endif %}
</div>


