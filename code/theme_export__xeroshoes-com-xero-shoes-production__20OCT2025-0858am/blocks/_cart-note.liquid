<script data-src="{{ 'component-cart-note.js' | asset_url }}" class="lazyload-asset" defer></script>
{% capture class_list %}
    {{ block.settings.padding_top_desktop }} {{ block.settings.padding_bottom_desktop }} {{ block.settings.padding_left_desktop }} {{ block.settings.padding_right_desktop }} {{ block.settings.padding_top_mobile }} {{ block.settings.padding_bottom_mobile }} {{ block.settings.padding_left_mobile }} {{ block.settings.padding_right_mobile }}
{% endcapture %}

<div class="{{ class_list }} {{ block.settings.border }}" {{ block.attributes }} style="background:{{ block.settings.bg_color }}; border-color: {{ block.settings.border_color }} !important;">
    {%- assign cartnote = cart.note -%}
    <cart-note>
        <div class="text-start" data-cartNote>
            <p class="{{ block.settings.text_size }} {{ block.settings.font_family }} {{ block.settings.margin_bottom_desktop }} {{ block.settings.margin_bottom_mobile }}" style="color: {{ block.settings.color }};">{{ 'templates.cart.note' | t }}:</p>
            <textarea name="note" class="form-control" rows="4" data-default="{{ cartnote | strip }}" placeholder="{{ 'templates.cart.note_placeholder' | t }}" title="{{ 'templates.cart.note_placeholder' | t }}" aria-label="{{ 'templates.cart.note_placeholder' | t }}">{% if cart.note != blank %}{{ cart.note }}{% endif %}</textarea>
            <button type="submit" class="link-block mt-2 {% if block.settings.style_class == 'btn-link-primary' or block.settings.style_class == 'btn-link-secondary' %} btn-link {% else %}btn {% endif %} {{ block.settings.style_class }} {{ block.settings.size_class }} " data-saveNote style="display: none;" data-default="Save" data-adding_txt="saving..">{{ block.settings.label }}</button>
            <p class="fs-sm text-center pt-3" data-resultMsg style="display: none;"></p>
        </div>
    </cart-note>
</div>

