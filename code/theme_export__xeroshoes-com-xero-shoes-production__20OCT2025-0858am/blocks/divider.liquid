{% capture class_list %}
    {{ block.settings.margin_top_desktop }} {{ block.settings.margin_bottom_desktop }} {{ block.settings.margin_top_mobile }} {{ block.settings.margin_bottom_mobile }} 
{% endcapture %}

<div class="divider-block__icon {{ class_list }}" style="background-color: {{ block.settings.divider_color }};"></div>
  
{% style %}
    #shopify-block-{{ block.id }} .divider-block__icon{
        max-width: {{ block.settings.divider_width_mobile }}px;
        height: {{ block.settings.divider_height }}px;
        width: {{ block.settings.divider_width_mobile }}px;
    }

    @media (min-width: 992px) {
        #shopify-block-{{ block.id }} .divider-block__icon{
            max-width: {{ block.settings.divider_width }}px;
            height: {{ block.settings.divider_height }}px;  
