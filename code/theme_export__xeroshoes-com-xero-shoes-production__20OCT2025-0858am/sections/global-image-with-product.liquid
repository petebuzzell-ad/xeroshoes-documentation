{% stylesheet %}
    .section-resource-list {
        row-gap: var(--gap);
    }
  
    .resource-list--carousel-mobile {
        display: block;
        @media screen and (width >= 750px) {
            display: none;
        }
    }
  
    .resource-list {
      --resource-list-column-gap: var(--resource-list-column-gap-mobile);
        --resource-list-row-gap: var(--resource-list-row-gap-mobile);
        width: 100%;
        @media screen and (width >= 991px) {
            --resource-list-column-gap: var(--resource-list-column-gap-desktop);
            --resource-list-row-gap: var(--resource-list-row-gap-desktop);
        }
    }
  
    .resource-list--grid {
        display: grid;
        column-gap: var(--resource-list-column-gap);
        row-gap: var(--resource-list-row-gap);
        grid-template-columns: var(--resource-list-columns-mobile);
    
        @media screen and (width >= 991px) {
            grid-template-columns: var(--resource-list-columns);
        }
    }
  
    .resource-list__item {
        height: 100%;
        text-decoration: none;
        display:grid;
    }
    @media (min-width: 1440px) {
        .product-list-carousel{
            margin-right: -15px;
        }
    }
    .product-list-carousel .swiper-slide{
        padding-block: 15px;
    }
  {% endstylesheet %}


{% liquid 
    assign product_exclude_tag = settings.product_exclude_tag_text
    assign featured_collection = section.settings.featured_collection
    assign show_product = section.settings.max_products 


    case section.settings.layout_type
    when 'grid'
      assign classes = 'resource-list--grid'
      capture styles
        echo '--resource-list-column-gap-desktop: ' | append: section.settings.columns_gap | append: 'px;'
        echo '--resource-list-row-gap-desktop: ' | append: section.settings.rows_gap | append: 'px;'
        echo '--resource-list-column-gap-mobile: ' | append: section.settings.columns_gap_mobile | append: 'px;'
        echo '--resource-list-row-gap-mobile: ' | append: section.settings.rows_gap_mobile | append: 'px;'
        echo '--resource-list-columns: repeat(' | append: section.settings.columns | append: ', 1fr);'
        echo '--resource-list-columns-mobile: repeat(' | append: section.settings.mobile_columns | append: ', 1fr);'
      endcapture
  endcase

%}

{% capture spacing_class_list %}
    {{ section.settings.section_top_spacing }} {{ section.settings.section_top_spacing_ipad }} {{ section.settings.section_top_spacing_mobile }} {{ section.settings.section_bottom_spacing }} {{ section.settings.section_bottom_spacing_ipad }} {{ section.settings.section_bottom_spacing_mobile }}
{% endcapture %}

{% capture product_list_class_list %}
    {{ section.settings.product_list_padding_top_desktop }} {{ section.settings.product_list_padding_bottom_desktop }} {{ section.settings.product_list_padding_left_desktop }} {{ section.settings.product_list_padding_right_desktop }} {{ section.settings.product_list_padding_top_mobile }} {{ section.settings.product_list_padding_bottom_mobile }} {{ section.settings.product_list_padding_left_mobile }} {{ section.settings.product_list_padding_right_mobile }}
{% endcapture %}


<section data-section-id="{{ section.id }}" id="{{ section.id }}" class="{{ spacing_class_list }} overflow-hidden z-1" style="background:{{ section.settings.section_bg_color }}; position:relative;">
    
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %} {% if section.settings.right_side_fullwidth %}right-outside-container{% endif %} {% if section.settings.left_side_fullwidth %}left-outside-container{% endif %}">     
        <div class="{{ section.settings.display }} {% if section.settings.display == 'd-flex'%}{{ section.settings.direction }} {{ section.settings.direction_mobile }} {{ section.settings.wrap }} {{ section.settings.align_items }} {{ section.settings.justify_content }} {{ section.settings.align_items_mb }} {{ section.settings.justify_content_mb }}{% endif %}">
            {%- content_for 'block', type: '_featured-collection-content', id: 'static-collection-content' -%}
            <div class="{{ section.settings.width }} {{ section.settings.width_md }} {{ section.settings.width_sm }} {{ product_list_class_list }}">
                {% if featured_collection == empty or featured_collection.products_count == 0 %}
                    {%- render 'onboarding-featured-products' -%}
                {% else %}

                {% case section.settings.layout_type %}
                    {% when 'grid' %}
                        <div class="resource-list resource-list--{{ section.id }}  {{ classes }}" style="{{ styles }}"{% if section.settings.layout_type == 'grid' %}data-testid="resource-list-grid"{% endif %}>
                            {% for product in featured_collection.products limit: show_product %}
                                {% unless product.tags contains product_exclude_tag %}
                                    <div class="resource-list__item">
                                        {% content_for "block", type: "product-card", id: "static-product-card", closest.product: product %}
                                    </div>
                                {% endunless %}
                            {% endfor %}
                        </div>
                    {% when 'carousel' %}    
                        <div class="d-flex flex-column product-list-carousel">
                            {%- if section.settings.nav_scrollbar -%}
                                <div class="order-2 swiper-scrollbar swiper-scrollbar-{{ section.id }} {{ section.settings.scrollbar_color }} {{ section.settings.scrollbar_visible }} mt-6"></div>
                            {%- endif -%}
                            {%- if section.settings.nav_dots -%}
                                <div class="swiper-pagination order-2 mt-6 swiper-pagination-{{ section.id }} {{ section.settings.pagination_visible }} {{ section.settings.pagination_color }}"></div>
                            {%- endif -%}

                            <div class="swiper-wrapper__custom">

                                {%- if section.settings.nav_arrows -%}
                                    <div class="custom-swiper-navigation {{ section.settings.nav_arrows_color }} {{ section.settings.nav_arrows_outside }} {{ section.settings.nav_arrows_visible }} {{ section.settings.nav_arrows_size }}">
                                        <button class="swiper-button-prev button-prev-{{ section.id }}"><svg aria-hidden="true" focusable="false"><use href="#icon-swiper-arrow-left"></use></svg></button>
                                        <button class="swiper-button-next button-next-{{ section.id }}"><svg aria-hidden="true" focusable="false"><use href="#icon-swiper-arrow-right"></use></svg></button>
                                    </div>
                                {%- endif -%}

                                <swiper-container class="d-block position-relative {% if section.settings.nav_dots or section.settings.nav_scrollbar %} swiper-pagination__scrollbar {% endif %}{{ section.settings.scrollbar_color }} {{ section.settings.scrollbar_visible }}"
                                    slides-per-view="{{ section.settings.slides_per_view_mobile }}" 
                                    space-between="{{ section.settings.slides_spacing_mobile }}" 
                                    speed="500" 
                                    loop="false"
                                    watch-slides-progress="true"
                                    watch-slides-visibility="true"
                                    threshold="20" 
                                    grabCursor="true"
                                    {%- if section.settings.nav_dots -%}
                                        pagination='{
                                            "el": ".swiper-pagination-{{ section.id }}",
                                            "clickable": true,
                                            "type": "bullets"
                                        }'
                                    {%- endif -%}
                                    {%- if section.settings.nav_scrollbar -%}
                                        scrollbar='{
                                            "el": ".swiper-scrollbar-{{ section.id }}"
                                        }'
                                    {%- endif -%}
                                    {%- if section.settings.nav_arrows -%}
                                        navigation='{
                                            "nextEl": ".button-next-{{ section.id }}",
                                            "prevEl": ".button-prev-{{ section.id }}"
                                        }'
                                    {%- endif -%}
                                    breakpoints='{
                                        "200": {
                                            "slidesPerView": {{ section.settings.slides_per_view_mobile }},
                                            "spaceBetween": {{ section.settings.columns_gap_mobile }}
                                        },
                                        "768": {
                                            "slidesPerView": {{ section.settings.slides_per_view_ipad }},
                                            "spaceBetween": {{ section.settings.columns_gap_ipad }}
                                        },
                                        "1200": {
                                            "slidesPerView": {{ section.settings.slides_per_view }},
                                            "spaceBetween": {{ section.settings.columns_gap }}
                                        }
                                    }'
                                >
                                    {% for product in featured_collection.products limit: show_product %}
                                        {% unless product.tags contains product_exclude_tag %}
                                            <swiper-slide class="swiper-slide" lazy="false">
                                                {% content_for "block", type: "product-card", id: "static-product-card-swiper", closest.product: product %}
                                            </swiper-slide>
                                        {% endunless %}
                                    {% endfor %}
                                </swiper-container>
                            </div>    
                        </div>    
                    {% endcase %}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">     
        <div class="row {{ section.settings.align_items }} {{ section.settings.justify_content }}">
            {%  content_for 'blocks' %}
        </div>      
    </div> 
</section>
{% if section.settings.pin_section_to_top %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            ScrollTrigger.matchMedia({
                "(min-width: 992px)": function () {
                    ScrollTrigger.create({
                        trigger: '#{{ section.id }}',
                        pin: true,  
                        pinSpacing: false,
                        start: "top top",
                        end: "bottom+=100% bottom",
                        scrub: 0.6
                    }); 
                }
            });
        });
    </script>   
{% endif %} 
