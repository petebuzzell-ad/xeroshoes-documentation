{% liquid
  assign collection_list = section.settings.collection_list
  if collection_list == blank
    assign limit = 2
    for i in (1..4)
      assign collection_list = collection_list | append: ', '
    endfor
    assign collection_list = collection_list | split: ','
  endif
%}
{% capture spacing_class_list %}
    {{ section.settings.section_top_spacing }} {{ section.settings.section_top_spacing_ipad }} {{ section.settings.section_top_spacing_mobile }} {{ section.settings.section_bottom_spacing }} {{ section.settings.section_bottom_spacing_ipad }} {{ section.settings.section_bottom_spacing_mobile }}
{% endcapture %}
<section data-section-id="{{ section.id }}" id="{{ section.id }}" class="overflow-hidden {{ spacing_class_list }} {% if section.settings.right_side_fullwidth %}overflow-hidden{% endif %}" style="background:{{ section.settings.section_bg_color }};">
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">     
        <div class="row {{ section.settings.align_items }} {{ section.settings.justify_content }}">
            {%- content_for 'block', type: '_section-header', id: 'static-section-header' -%}
        </div>      
    </div> 
    <custom-tabs class="d-block">
        <div id="customTabs" class="d-flex align-items-center flex-wrap" data-custom-tabs>
            <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %} col-md-7 ms-0 order-0 overflow-hidden" >
                <div class="tabs tablist-collection d-flex list-unstyled gap-3" role="tablist">
                    {% for collection in collection_list limit: limit %}
                        {%- unless collection.products_count == 0 -%}
                            {% if section.settings.collection_list == empty %}
                                <button class="tablink{% if forloop.index == 1 %} active{% endif %}" data-toggle="tab" id="collection_title-{{ forloop.index }}"  role="tab" aria-selected="{% if forloop.index == 1 %}true{% else %}false{% endif %}" aria-controls="collection_title-{{ forloop.index }}"  aria-expanded="{% if forloop.index == 1 %}true{% else %}false{% endif %}" data-target="#collection_title-{{ forloop.index }}">Collection Title</button>
                            {% else %}        
                                <button class="tablink{% if forloop.index == 1 %} active{% endif %}" data-toggle="tab" id="{{ collection.title |  handleize }}-{{ forloop.index }}"  role="tab" aria-selected="{% if forloop.index == 1 %}true{% else %}false{% endif %}" aria-controls="{{ collection.title |  handleize }}"  aria-expanded="{% if forloop.index == 1 %}true{% else %}false{% endif %}" data-target="#{{ collection.title |  handleize }}">{{ collection.title }}</button>
                            {% endif %}
                        {%- endunless -%}
                    {% endfor %}     
                </div>
            </div>
            {% if section.settings.show_shop_all_links %}
            <div class="col-md-5 pt-md-2 pt-5 container d-flex gap-3 me-0 ms-auto order-2 order-md-1 tabs-shop-links justify-content-md-end flex-column flex-md-row">
                {% for collection in collection_list limit: limit %}
                    <div class="shop-link align-items-center {% if forloop.index == 1 %} active{% endif %}" data-tab="{{ collection.title | handleize }}">
                        <a href="{{ collection.url }}" class="btn btn-link btn-link-dark d-none d-md-inline-flex">Shop All {{ collection.title | escape }}</a> 
                        <a href="{{ collection.url }}" class="btn w-100 d-md-none btn-primary">Shop All {{ collection.title | escape }}</a> 
                    </div>
                {% endfor %}
            </div>
            {% endif %}
            <div class="tab-content mt-md-3 mt-4 mt-lg-0 pt-lg-3 pb-lg-3 w-100 text-start order-md-2 order-1" id="customTabsContent">
                {% for collection in collection_list limit: limit %}
                    {% liquid
                        assign show_product = section.settings.max_products 
                        assign product_exclude_tag = settings.product_exclude_tag_text
                    %}
                    <div class="tab-pane tabcontent{% if forloop.index == 1 %} open{% endif %}" id="{{ collection.title |  handleize }}" role="tabpanel" aria-labelledby="{{ collection.title |  handleize }}-{{ forloop.index }}" aria-hidden="{% if forloop.index == 1 %}false{% else %}true{% endif %}" data-tabpanel>
                        <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %} {% if section.settings.right_side_fullwidth %}right-outside-container {% endif %}">
                            {% if section.settings.collection_list == empty %}
                                {%- render 'onboarding-featured-products' -%}
                            {% else %}
                                <div class="d-flex flex-column w-100">
                                    {%- if section.settings.nav_scrollbar -%}
                                        <div class="order-2 swiper-scrollbar swiper-scrollbar-{{ collection.title |  handleize }} {{ section.settings.scrollbar_color }} {{ section.settings.scrollbar_visible }} mt-6"></div>
                                    {%- endif -%}
                                    {%- if section.settings.nav_dots -%}
                                        <div class="swiper-pagination order-2 mt-6 swiper-pagination-{{ collection.title |  handleize }} {{ section.settings.pagination_visible }} {{ section.settings.pagination_color }}"></div>
                                    {%- endif -%}

                                    <div class="swiper-wrapper__custom hover-arrows arrows-img-center">

                                        {%- if section.settings.nav_arrows -%}
                                            <div class="custom-swiper-navigation {{ section.settings.nav_arrows_color }} {{ section.settings.nav_arrows_outside }} {{ section.settings.nav_arrows_visible }} {{ section.settings.nav_arrows_size }}">
                                                <button class="swiper-button-prev button-prev-{{ collection.title |  handleize }}"><svg aria-hidden="true" focusable="false"><use href="#icon-arrow-left"></use></svg></button>
                                                <button class="swiper-button-next button-next-{{ collection.title |  handleize }}"><svg aria-hidden="true" focusable="false"><use href="#icon-arrow-right"></use></svg></button>
                                            </div>
                                        {%- endif -%}

                                        <swiper-container class="d-block main-swiper-card position-relative {% if section.settings.nav_dots or section.settings.nav_scrollbar %} swiper-pagination__scrollbar {% endif %}{{ section.settings.scrollbar_color }} {{ section.settings.scrollbar_visible }}"
                                            slides-per-view="{{ section.settings.slides_per_view_mobile }}" 
                                            space-between="{{ section.settings.slides_spacing_mobile }}" 
                                            speed="500" 
                                            loop="false"
                                            watch-slides-progress="true"
                                            watch-slides-visibility="true"
                                            threshold="20" 
                                            grabCursor="true"
                                            observer="true"
                                            observeParents="true"
                                            {%- if section.settings.nav_dots -%}
                                                pagination='{
                                                    "el": ".swiper-pagination-{{ collection.title |  handleize }}",
                                                    "clickable": true,
                                                    "type": "bullets"
                                                }'
                                            {%- endif -%}
                                            {%- if section.settings.nav_scrollbar -%}
                                                scrollbar='{
                                                    "el": ".swiper-scrollbar-{{ collection.title |  handleize }}"
                                                }'
                                            {%- endif -%}
                                            {%- if section.settings.nav_arrows -%}
                                                navigation='{
                                                    "nextEl": ".button-next-{{ collection.title |  handleize }}",
                                                    "prevEl": ".button-prev-{{ collection.title |  handleize }}"
                                                }'
                                            {%- endif -%}
                                            breakpoints='{
                                                "200": {
                                                    "slidesPerView": {{ section.settings.slides_per_view_mobile | minus: 0.3 }},
                                                    "spaceBetween": {{ section.settings.columns_gap_mobile }}
                                                },
                                                "350": {
                                                    "slidesPerView": {{ section.settings.slides_per_view_mobile | minus: 0.027 }},
                                                    "spaceBetween": {{ section.settings.columns_gap_mobile }}
                                                },
                                                "768": {
                                                    "slidesPerView": {{ section.settings.slides_per_view_ipad }},
                                                    "spaceBetween": {{ section.settings.columns_gap_ipad }}
                                                },
                                                "992": {
                                                    "slidesPerView": {{ section.settings.slides_per_view_ipad }},
                                                    "spaceBetween": {{ section.settings.columns_gap }}
                                                },
                                                "1200": {
                                                    "slidesPerView": {{ section.settings.slides_per_view }},
                                                    "spaceBetween": {{ section.settings.columns_gap }}
                                                }
                                            }'>
                                            {% for product in collection.products limit: show_product %}
                                                {% unless product.tags contains product_exclude_tag %}
                                                    <swiper-slide class="swiper-slide" lazy="true">
                                                        {% content_for "block", type: "product-card", id: "static-product-card", closest.product: product, blockindex: forloop.index %}
                                                    </swiper-slide>
                                                {% endunless %} 
                                            {% endfor %}
                                        </swiper-container>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </custom-tabs> 

    {% if section.blocks.size > 0 %}
        <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">     
            <div class="row {{ section.settings.align_items }} {{ section.settings.justify_content }}">
                {%  content_for 'blocks' %}
            </div>      
        </div> 
    {% endif %}
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    function positionArrowsAtHalfMediaHeight() {
        const arrowsImgCenterContainers = document.querySelectorAll('.arrows-img-center');
        
        arrowsImgCenterContainers.forEach(container => {
            const navigationButtons = container.querySelectorAll('.custom-swiper-navigation .swiper-button-prev, .custom-swiper-navigation .swiper-button-next');
            const productMedia = container.querySelector('.product--media');
            
            if (navigationButtons.length > 0 && productMedia) {
                // Get the actual height of the product--media element
                const mediaHeight = productMedia.offsetHeight;
                const halfMediaHeight = mediaHeight / 2;
                
                // Position buttons at half the media height, accounting for button height
                navigationButtons.forEach(button => {
                    const buttonHeight = button.offsetHeight;
                    const buttonCenterOffset = buttonHeight / 2;
                    const finalPosition = halfMediaHeight - buttonCenterOffset + 10;
                    
                    button.style.top = finalPosition + 'px';
                    button.style.transform = 'translateY(0)'; // Remove any existing transform
                });
            }
        });
    }
    
    // Run on page load
    positionArrowsAtHalfMediaHeight();
    
    // Run on window resize to handle responsive changes
    window.addEventListener('resize', function() {
        // Debounce the resize event
        clearTimeout(window.resizeTimeout);
        window.resizeTimeout = setTimeout(positionArrowsAtHalfMediaHeight, 250);
    });
    
    // Run when images are loaded (in case they affect the media height)
    window.addEventListener('load', positionArrowsAtHalfMediaHeight);
    
    // Run when swiper is initialized (if there's a delay in rendering)
    setTimeout(positionArrowsAtHalfMediaHeight, 500);
});
</script>

