      "label": "Subtext font size",
      "default": 11
    },
    {
      "type": "select",
      "id": "subtext_font_weight",
      "label": "Subtext font weight",
      "options": [
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"},
        {"value": "600", "label": "Semi-bold"}
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "subtext_opacity",
      "min": 0.4,
      "max": 1,
      "step": 0.1,
      "label": "Subtext opacity",
      "default": 0.7
