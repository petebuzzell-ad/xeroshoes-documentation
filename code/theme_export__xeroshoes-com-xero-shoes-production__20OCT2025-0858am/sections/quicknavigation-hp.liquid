{% comment %}
  Quick Navigation Section - Clean Design
  Square buttons with optional images and subcategory text
  All buttons maintain consistent height for clean alignment
  
  Version: 4.0.0
{% endcomment %}

<style>
  .quick-nav-section-{{ section.id }} {
    background: {{ section.settings.background_color }};
    {% if section.settings.use_gradient %}
      background: linear-gradient(90deg, {{ section.settings.background_color }} 0%, {{ section.settings.gradient_end_color }} 100%);
    {% endif %}
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    {% unless section.settings.show_on_desktop %}
      display: none;
    {% endunless %}
  }

  .quick-nav-wrapper-{{ section.id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  {% if section.settings.section_title != blank %}
  .quick-nav-title-{{ section.id }} {
    text-align: {{ section.settings.title_alignment }};
    color: {{ section.settings.title_color }};
    margin-bottom: {{ section.settings.title_spacing }}px;
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    font-family: var(--font-heading-family);
  }
  {% endif %}

  .nav-button-container-{{ section.id }} {
    display: flex;
    gap: {{ section.settings.button_spacing }}px;
    overflow-x: auto;
    padding-bottom: 8px;
    scrollbar-width: thin;
    scrollbar-color: {{ section.settings.scrollbar_color }} transparent;
    -webkit-overflow-scrolling: touch;
    align-items: stretch; /* Ensures all items stretch to same height */
  }

  .nav-button-container-{{ section.id }}::-webkit-scrollbar {
    height: 6px;
  }

  .nav-button-container-{{ section.id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .nav-button-container-{{ section.id }}::-webkit-scrollbar-thumb {
    background: {{ section.settings.scrollbar_color }};
    border-radius: 3px;
  }

  .nav-item-{{ section.id }} {
    flex: 0 0 auto;
    text-decoration: none;
    transition: transform {{ section.settings.animation_speed }}ms ease;
    cursor: pointer;
    display: flex;
    flex-direction: column;
  }

  .nav-item-{{ section.id }}:hover {
    transform: translateY(-{{ section.settings.hover_lift }}px);
  }

  .nav-item-image-{{ section.id }} {
    width: {{ section.settings.image_size }}px;
    height: {{ section.settings.image_size }}px;
    background: {{ section.settings.image_background }};
    border-radius: {{ section.settings.image_radius }}px;
    margin-bottom: {{ section.settings.image_spacing }}px;
    overflow: hidden;
    display: {% if section.settings.show_images %}flex{% else %}none{% endif %};
    align-items: center;
    justify-content: center;
    transition: all {{ section.settings.animation_speed }}ms ease;
    flex-shrink: 0;
    {% if section.settings.image_border_width > 0 %}
      border: {{ section.settings.image_border_width }}px solid {{ section.settings.image_border_color }};
    {% endif %}
  }

  .nav-item-{{ section.id }}:hover .nav-item-image-{{ section.id }} {
    {% if section.settings.image_hover_effect %}
      box-shadow: 0 8px 24px {{ section.settings.shadow_color }};
      background: {{ section.settings.image_hover_background }};
      {% if section.settings.image_border_width > 0 %}
        border-color: {{ section.settings.image_hover_border_color }};
      {% endif %}
    {% endif %}
  }

  .nav-item-image-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
  }

  .nav-item-image-{{ section.id }} .placeholder-icon {
    width: 60%;
    height: 60%;
    opacity: 0.3;
    fill: {{ section.settings.placeholder_icon_color }};
  }

  .nav-button-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    {% if section.settings.button_border_width > 0 %}
      border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    {% else %}
      border: none;
    {% endif %}
    border-radius: {{ section.settings.button_radius }}px;
    font-family: var(--font-heading-family);
    text-align: center;
    transition: all {{ section.settings.animation_speed }}ms ease;
    white-space: nowrap;
    min-width: {{ section.settings.image_size }}px;
    min-height: {{ section.settings.button_min_height }}px; /* Consistent height */
    line-height: 1.3;
    flex-grow: 1; /* Allows button to fill available space */
  }

  .nav-item-{{ section.id }}:hover .nav-button-{{ section.id }} {
    background: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }};
    {% if section.settings.button_hover_effect %}
      box-shadow: 0 4px 12px {{ section.settings.shadow_color }};
    {% endif %}
    {% if section.settings.button_border_width > 0 %}
      border-color: {{ section.settings.button_hover_border_color }};
    {% endif %}
  }

  .button-main-text-{{ section.id }} {
    display: block;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
  }

  .button-sub-text-{{ section.id }} {
    display: block;
    font-size: {{ section.settings.subtext_font_size }}px;
    font-weight: {{ section.settings.subtext_font_weight }};
    opacity: {{ section.settings.subtext_opacity }};
    margin-top: {{ section.settings.subtext_spacing }}px;
    text-transform: {{ section.settings.subtext_transform }};
    {% if section.settings.subtext_letter_spacing != '0' %}
      letter-spacing: {{ section.settings.subtext_letter_spacing }}px;
    {% endif %}
    {% if section.settings.subtext_color != section.settings.button_text_color %}
      color: {{ section.settings.subtext_color }};
    {% endif %}
  }

  /* Grid Layout Option */
  {% if section.settings.layout_type == 'grid' %}
  @media screen and (min-width: 769px) {
    .nav-button-container-{{ section.id }} {
      display: grid;
      grid-template-columns: repeat({{ section.settings.grid_columns }}, 1fr);
      gap: {{ section.settings.button_spacing }}px;
      overflow-x: visible;
      align-items: stretch;
    }

    .nav-item-{{ section.id }} {
      flex: 1;
    }

    .nav-item-image-{{ section.id }},
    .nav-button-{{ section.id }} {
      width: 100%;
    }
  }
  {% elsif section.settings.layout_type == 'grid_auto' %}
  @media screen and (min-width: 769px) {
    .nav-button-container-{{ section.id }} {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax({{ section.settings.image_size }}px, 1fr));
      gap: {{ section.settings.button_spacing }}px;
      overflow-x: visible;
      align-items: stretch;
    }

    .nav-item-{{ section.id }} {
      flex: 1;
    }

    .nav-item-image-{{ section.id }},
    .nav-button-{{ section.id }} {
      width: 100%;
    }
  }
  {% endif %}

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .quick-nav-section-{{ section.id }} {
      {% unless section.settings.show_on_mobile %}
        display: none !important;
      {% else %}
        display: block;
      {% endunless %}
      padding: {{ section.settings.mobile_padding_top }}px 0 {{ section.settings.mobile_padding_bottom }}px;
    }

    .nav-item-image-{{ section.id }} {
      width: {{ section.settings.mobile_image_size }}px;
      height: {{ section.settings.mobile_image_size }}px;
    }

    .nav-button-{{ section.id }} {
      min-width: {{ section.settings.mobile_image_size }}px;
      padding: {{ section.settings.mobile_button_padding }}px;
      min-height: {{ section.settings.mobile_button_min_height }}px;
    }

    .button-main-text-{{ section.id }} {
      font-size: {{ section.settings.mobile_font_size }}px;
    }

    .button-sub-text-{{ section.id }} {
      font-size: {{ section.settings.mobile_subtext_size }}px;
    }
  }

  /* Desktop Only */
  @media screen and (min-width: 769px) {
    .quick-nav-section-{{ section.id }} {
      {% unless section.settings.show_on_desktop %}
        display: none !important;
      {% else %}
        display: block;
      {% endunless %}
    }
  }

  {% if section.settings.custom_css != blank %}
    {{ section.settings.custom_css }}
  {% endif %}
</style>

<section class="quick-nav-section-{{ section.id }}" role="navigation" aria-label="{{ section.settings.aria_label }}">
  <div class="quick-nav-wrapper-{{ section.id }}">
    {% if section.settings.section_title != blank %}
      <h2 class="quick-nav-title-{{ section.id }}">
        {{ section.settings.section_title }}
      </h2>
    {% endif %}
    
    <div class="nav-button-container-{{ section.id }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'nav_item' %}
            <a 
              href="{{ block.settings.link | default: '#' }}"
              class="nav-item-{{ section.id }}"
              {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %}
              {{ block.shopify_attributes }}
            >
              {% if section.settings.show_images %}
                <div class="nav-item-image-{{ section.id }}">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image_url: width: 300 | image_tag: 
                      loading: 'lazy',
                      alt: block.settings.label
                    }}
                  {% elsif block.settings.placeholder_icon != 'none' %}
                    <svg class="placeholder-icon" viewBox="0 0 24 24">
                      {% case block.settings.placeholder_icon %}
                        {% when 'bag' %}
                          <path d="M19 6h-2c0-2.76-2.24-5-5-5S7 3.24 7 6H5c-1.1 0-1.99.9-1.99 2L3 20c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-7-3c1.66 0 3 1.34 3 3H9c0-1.66 1.34-3 3-3zm0 10c-2.76 0-5-2.24-5-5h2c0 1.66 1.34 3 3 3s3-1.34 3-3h2c0 2.76-2.24 5-5 5z"/>
                        {% when 'star' %}
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        {% when 'tag' %}
                          <path d="M21.41 11.58l-9-9C12.05 2.22 11.55 2 11 2H4c-1.1 0-2 .9-2 2v7c0 .55.22 1.05.59 1.42l9 9c.36.36.86.58 1.41.58.55 0 1.05-.22 1.41-.59l7-7c.37-.36.59-.86.59-1.41 0-.55-.23-1.06-.59-1.42zM5.5 7C4.67 7 4 6.33 4 5.5S4.67 4 5.5 4 7 4.67 7 5.5 6.33 7 5.5 7z"/>
                        {% when 'grid' %}
                          <path d="M4 11h5V5H4v6zm0 7h5v-6H4v6zm6 0h5v-6h-5v6zm6 0h5v-6h-5v6zm-6-7h5V5h-5v6zm6-6v6h5V5h-5z"/>
                        {% when 'shoe' %}
                          <path d="M2 18v2h20v-2H2zm19.5-7.5L20 8l-2.5 1L15 7.5 12.5 9 10 7.5 7.5 9 5 7.5 2 10v2.5L5 10l2.5 1.5L10 10l2.5 1.5L15 10l2.5 1.5L20 10l1.5 2.5z"/>
                        {% when 'heart' %}
                          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                        {% when 'person' %}
                          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        {% when 'box' %}
                          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V7h14v12z"/>
                      {% endcase %}
                    </svg>
                  {% else %}
                    <!-- Empty placeholder for consistent spacing -->
                    <div style="width: 100%; height: 100%;"></div>
                  {% endif %}
                </div>
              {% endif %}
              
              <div class="nav-button-{{ section.id }}">
                <span class="button-main-text-{{ section.id }}">{{ block.settings.label }}</span>
                {% if block.settings.subtext != blank and section.settings.show_subtext %}
                  <span class="button-sub-text-{{ section.id }}">{{ block.settings.subtext }}</span>
                {% endif %}
              </div>
            </a>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Quick Navigation",
  "tag": "section",
  "class": "quick-navigation-clean",
  "settings": [
    {
      "type": "header",
      "content": "📝 Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section title (optional)"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 18,
      "max": 36,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 24
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title weight",
      "options": [
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"},
        {"value": "600", "label": "Semi-bold"},
        {"value": "700", "label": "Bold"}
      ],
      "default": "600"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "title_spacing",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Title bottom spacing",
      "default": 20
    },
    {
      "type": "header",
      "content": "📐 Layout"
    },
    {
      "type": "select",
      "id": "layout_type",
      "label": "Desktop layout",
      "options": [
        {"value": "scroll", "label": "Horizontal scroll"},
        {"value": "grid", "label": "Grid (fixed columns)"},
        {"value": "grid_auto", "label": "Grid (auto-fit)"}
      ],
      "default": "scroll",
      "info": "Choose how buttons are arranged on desktop"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "min": 3,
      "max": 8,
      "step": 1,
      "label": "Grid columns (if fixed)",
      "default": 5,
      "info": "Only applies when 'Grid (fixed columns)' is selected"
    },
    {
      "type": "range",
      "id": "max_width",
