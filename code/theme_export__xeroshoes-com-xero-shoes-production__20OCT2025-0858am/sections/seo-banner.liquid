      "id": "cta_secondary_text",
      "label": "Button Text",
      "default": "Learn About Natural Movement"
    },
    {
      "type": "url",
      "id": "cta_secondary_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Trust Signals"
    },
    {
      "type": "checkbox",
      "id": "hide_trust_signals",
      "label": "Hide trust signals",
      "default": false
    },
    {
      "type": "header",
      "content": "Colors"
