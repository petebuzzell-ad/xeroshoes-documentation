{% comment %}
  Section: Hero Simple
  A clean, SEO-optimized hero section with customizable content and styling
  Brand-aligned for Xero Shoes
{% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    --hero-bg: {{ section.settings.background_color }};
    --hero-text: {{ section.settings.text_color }};
    --hero-accent: {{ section.settings.accent_color }};
    --hero-button-bg: {{ section.settings.button_color }};
    --hero-button-text: {{ section.settings.button_text_color }};
    --hero-padding-top: {{ section.settings.padding_top }}px;
    --hero-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  #hero-{{ section.id }} {
    background: var(--hero-bg);
    padding-top: var(--hero-padding-top);
    padding-bottom: var(--hero-padding-bottom);
  }

  #hero-{{ section.id }} .hero-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: {{ section.settings.text_alignment }};
  }

  #hero-{{ section.id }} h1 {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
    color: var(--hero-text);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }

  #hero-{{ section.id }} .highlight {
    color: var(--hero-accent);
  }

  #hero-{{ section.id }} .subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 500;
    color: var(--hero-accent);
    margin-bottom: 32px;
    letter-spacing: -0.01em;
  }

  #hero-{{ section.id }} .hero-body {
    font-size: {{ section.settings.body_size }}px;
    line-height: 1.7;
    color: var(--hero-text);
    max-width: 750px;
    margin: 0 auto 48px;
    opacity: 0.85;
  }

  #hero-{{ section.id }} .trust-signals {
    display: flex;
    justify-content: center;
    gap: 80px;
    margin-bottom: 56px;
    flex-wrap: wrap;
  }

  {% if section.settings.hide_trust_signals %}
    #hero-{{ section.id }} .trust-signals {
      display: none;
    }
  {% endif %}

  #hero-{{ section.id }} .signal {
    text-align: center;
  }

  #hero-{{ section.id }} .signal-number {
    display: block;
    font-size: {{ section.settings.signal_number_size }}px;
    font-weight: 700;
    color: var(--hero-accent);
    line-height: 1;
    margin-bottom: 8px;
  }

  #hero-{{ section.id }} .signal-label {
    font-size: 12px;
    font-weight: 600;
    color: var(--hero-text);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.6;
  }

  #hero-{{ section.id }} .cta-group {
    display: flex;
    gap: 24px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  {% if section.settings.button_style == 'stacked' %}
    #hero-{{ section.id }} .cta-group {
      flex-direction: column;
      max-width: 400px;
      margin: 0 auto;
    }
    
    #hero-{{ section.id }} .cta {
      width: 100%;
    }
  {% endif %}

  #hero-{{ section.id }} .cta {
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 600;
    border-radius: {{ section.settings.button_radius }}px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
    text-align: center;
  }

  #hero-{{ section.id }} .cta-primary {
    background: var(--hero-button-bg);
    color: var(--hero-button-text);
  }

  #hero-{{ section.id }} .cta-primary:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  #hero-{{ section.id }} .cta-secondary {
    background: transparent;
    color: var(--hero-text);
    border: 2px solid var(--hero-text);
  }

  #hero-{{ section.id }} .cta-secondary:hover {
    background: var(--hero-text);
    color: var(--hero-bg);
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    #hero-{{ section.id }} h1 {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    #hero-{{ section.id }} .subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }

    #hero-{{ section.id }} .hero-body {
      font-size: {{ section.settings.body_size_mobile }}px;
    }

    #hero-{{ section.id }} .trust-signals {
      gap: 40px;
    }

    #hero-{{ section.id }} .signal-number {
      font-size: 28px;
    }

    {% if section.settings.mobile_button_stack %}
      #hero-{{ section.id }} .cta-group {
        flex-direction: column;
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
      }

      #hero-{{ section.id }} .cta {
        width: 100%;
      }
    {% endif %}
  }

  @media (max-width: 480px) {
    #hero-{{ section.id }} .trust-signals {
      flex-direction: column;
      gap: 24px;
    }
  }
</style>

<section id="hero-{{ section.id }}" class="hero-section">
  <div class="hero-container">
    {% comment %} SEO-Optimized H1 Tag {% endcomment %}
    <h1>
      {{ section.settings.heading_start }}
      {% if section.settings.heading_highlight != blank %}
        <span class="highlight">{{ section.settings.heading_highlight }}</span>
      {% endif %}
      {{ section.settings.heading_end }}
    </h1>
    
    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    
    {% if section.settings.body_text != blank %}
      <div class="hero-body">{{ section.settings.body_text }}</div>
    {% endif %}
    
    {% comment %} Trust Signals {% endcomment %}
    {% unless section.settings.hide_trust_signals %}
      <div class="trust-signals">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'trust_signal' %}
              <div class="signal" {{ block.shopify_attributes }}>
                <span class="signal-number">{{ block.settings.number }}</span>
                <span class="signal-label">{{ block.settings.label }}</span>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endunless %}
    
    {% comment %} CTA Buttons {% endcomment %}
    <div class="cta-group">
      {% if section.settings.cta_primary_text != blank %}
        <a href="{{ section.settings.cta_primary_link | default: '#' }}" class="cta cta-primary">
          {{ section.settings.cta_primary_text }}
        </a>
      {% endif %}
      
      {% if section.settings.cta_secondary_text != blank %}
        <a href="{{ section.settings.cta_secondary_link | default: '#' }}" class="cta cta-secondary">
          {{ section.settings.cta_secondary_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

